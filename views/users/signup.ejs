<% include ../header %>

<!--form begain-->
<form method="post" action="/users/signup" style="width: 500px; margin: 30px auto" class="ui error form segment">
    <% if (message.danger) { %>
    <div class="ui error message">
        <p><%=message.danger%></p>
    </div>
    <% } %>

    <div class="field">
        <label>邮件地址：</label>
        <input type="email" id="email" name="email" placeholder="email">
    </div>
    <div class="field">
        <label>用户密码：</label>
        <input type="password" id="password" name="password">
    </div>

    <input type="submit" value="注册" class="ui blue submit button"/>
</form>
<!--form end-->

<% include ../footer %>