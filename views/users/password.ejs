<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properities -->
    <title><%= title %></title>

    <link rel="stylesheet" type="text/css" href="/dist/semantic.css">
    <script src="/javascripts/jquery-2.1.3.min.js"></script>
    <script src="/dist/semantic.js"></script>
    <script src="/javascripts/profile.js"></script>

</head>
<body>
<div class="ui blue inverted menu">
    <a href="/" class="item">
        <i class="home icon"></i> 首页
    </a>
    <a href="/ruby" class="item">
        <i class="mail icon"></i> 宝石袋
    </a>
    <a href="/bbs" class="item">
        <i class="mail icon"></i> 社区
    </a>
    <div class="right menu">
        <div class="item">
            <div class="ui icon input">
                <input type="text" placeholder="搜索中...">
                <i class="search link icon"></i>
            </div>
        </div>
        <a class="item">注册</a>
        <a class="item">登录</a>
    </div>

</div>

<!--form begain-->
<div style="width: 900px; margin: 30px auto">
    <div class="ui blue  piled segment">
        <h4 class="ui left floated header">
            密码修改
        </h4>

        <div class="ui clearing divider"></div>

            <% if(message.success) {%>
            <div class="ui green message">
                <p><%=message.success%></p>
            </div>
            <% } %>
            <% if(message.danger) {%>
            <div class="ui error message">
                <p><%=message.danger%></p>
            </div>
            <% } %>
            <form method="post" action="/users/change-password" class="ui form segment">


                <div class="field">
                    <label>旧密码</label>
                    <input name="old_password" type="password">
                </div>

                <div class="field">
                    <label>新密码</label>
                    <input name="new_password" type="password">
                </div>

                <div class="field">
                    <label>确认新密码</label>
                    <input name="new_password2" type="password">
                </div>


                <input type="submit" value="提交" class="ui blue submit button">
            </form>




    </div>
    <!--a category end-->






</div>
<!--form end-->

<div class="ui gray segment">
    powered by oocomic.com
</div>

</body>
</html>