<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properities -->
    <title><%= title %></title>

    <link rel="stylesheet" type="text/css" href="/dist/semantic.css">
    <script src="/javascripts/jquery-2.1.3.min.js"></script>
    <script src="/dist/semantic.js"></script>



</head>
<body>
<div class="ui blue inverted menu">
    <a href="/" class="item">
        <i class="home icon"></i> 首页
    </a>
    <a href="/ruby" class="item">
        <i class="mail icon"></i> 宝石袋
    </a>
    <a href="/bbs" class="active item">
        <i class="mail icon"></i> 社区
    </a>
    <div class="right menu">
        <div class="item">
            <div class="ui icon input">
                <input type="text" placeholder="搜索中...">
                <i class="search link icon"></i>
            </div>
        </div>
        <a class="item">注册</a>
        <a class="item">登录</a>
    </div>

</div>



<div style="width: 900px; margin: 30px auto">
    <div class="ui blue  piled segment">
        <h4 class="ui left floated header">

            <div class="ui breadcrumb">

                <a class="active section" href="/bbs/category/<%= post.category.id %>">
                    <%= post.category.name %>
                </a>
                <div class="divider"> / </div>
                <span class="active section" >
                    <%= post.title %>
                </span>
            </div>
        </h4>
        <a href="/bbs/new-post/category/<%= post.category.id %>" class="small ui right floated teal  header label ">
            发帖
        </a>
        <div class="ui clearing divider"></div>

        <div class="ui comments">
            <div class="comment">
                <a class="avatar">
                    <img src="/gfsimgs/<%=post.createdBy.avatar%>">
                </a>
                <div class="content">
                    <a href="/users/<%=post.createdBy.id%>" class="author"><%= post.createdBy.name %></a>
                    <div class="metadata">
                        <span class="date"><%=: post.createdOn | dateFormat %></span>
                    </div>
                    <div class="text">

                        <%- post.content %>
                        <% post.thumbnails.forEach( function(id) { %>
                            <img src="/gfsimgs/<%=id%>">
                        <% }) %>
                        <p></p>
                    </div>
                    <!--<div class="actions">-->
                        <!--<a class="reply">Reply</a>-->
                        <!--<a class="save">Save</a>-->
                        <!--<a class="hide">Hide</a>-->
                        <!--<a>-->
                            <!--<i class="expand icon"></i>-->
                            <!--Full-screen-->
                        <!--</a>-->
                    <!--</div>-->
                </div>
            </div>
        </div>

        <h3 class="ui dividing header"></h3>

        <% comments.forEach(function(comment) { %>
        <div class="ui comments">


            <div class="comment">
                <a class="avatar">
                    <img src="/gfsimgs/<%=comment.createdBy.avatar%>">
                </a>
                <div class="content">
                    <a href="/users/<%=post.createdBy.id%>" class="author"><%=comment.createdBy.name%></a>
                    <div class="metadata">
                        <span class="date"><%=: comment.createdOn | dateFormat %></span>
                    </div>
                    <div class="text">
                        <%=comment.content%>
                    </div>

                </div>
            </div>

        </div>
        <% }) %>

        <form method="post" action="/bbs/comment" class="ui reply form">
            <input name="userid" type="hidden" value="<%=user.id%>">
            <input name="postid" type="hidden" value="<%=post.id%>">
            <div class="field">
                <textarea name="content"></textarea>
            </div>
            <input type="submit" value="提交" class="ui blue labeled submit icon button">

        </form>


    </div>



    </div>
    <!--a category end-->






</div>
<div class="ui gray segment">
    powered by oocomic.com
</div>

</body>
</html>