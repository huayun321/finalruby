<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properities -->
    <title><%= title %></title>

    <link rel="stylesheet" type="text/css" href="/dist/semantic.css">
    <script src="/javascripts/jquery-2.1.3.min.js"></script>
    <script src="/dist/semantic.js"></script>
    <!--socket io-->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/socket.io-stream.js"></script>
    <script src="/ckeditor/ckeditor.js"></script>

    <script src="/javascripts/util_image.js"></script>
</head>
<body>
<div class="ui blue inverted menu">
    <a href="/" class="item">
        <i class="home icon"></i> 首页
    </a>
    <a href="/ruby" class="item">
        <i class="mail icon"></i> 宝石袋
    </a>
    <a href="/bbs" class="active item">
        <i class="mail icon"></i> 社区
    </a>
    <div class="right menu">
        <div class="item">
            <div class="ui icon input">
                <input type="text" placeholder="搜索中...">
                <i class="search link icon"></i>
            </div>
        </div>
        <a class="item">注册</a>
        <a class="item">登录</a>
    </div>

</div>



<div style="width: 900px; margin: 30px auto">
    <div class="ui blue  piled segment">
        <h4 class="ui left floated header">
            <a href="/bbs/category/<%= category.id %>">
                <%= category.name %>
            </a>
        </h4>
        <a href="/bbs/new-post/category/<%= category.id %>" class="small ui right floated teal  header label ">
            发帖
        </a>
        <div class="ui clearing divider"></div>

        <div class="ui error form segment">
            <input id="category_id" type="hidden" value="<%= category.id %>">
            <!--<div class="ui error message">-->
                <!--<div class="header">Action Forbidden</div>-->
                <!--<p>You can only sign up for an account once with a given e-mail address.</p>-->
            <!--</div>-->

            <div class="two fields">
                <div class="field">
                    <div id="img-add" class="ui tiny teal button">添加图片</div>
                    <input style="display: none" type="file" id="files" name="uploads" multiple="multiple"  /><br>
                </div>
                <div class=" inline field">
                    <div id="img_box" class="ui tiny images">

                    </div>
                </div>
            </div>
            <div class="field">
                <label>文章标题</label>
                <input id="input_title" name="title" placeholder="文章标题" type="text">
            </div>

            <div class="field">
                <label>文章内容</label>
                <textarea id="input_content" class="ckeditor" name="content"></textarea>
            </div>

            <div id="bar1" class="ui small blue progress" style="display: none">
                <div  class="bar"></div>
            </div>
            <div id="bar2" class="ui small black progress" style="display: none">
                <div class="bar"></div>
            </div>
            <div id="bar3" class="ui small green progress" style="display: none">
                <div class="bar" ></div>
            </div>
            <div id="bar4" class="ui small red progress" style="display: none">
                <div class="bar"></div>
            </div>

            <button id="post" class="ui blue submit button">发帖</button>
        </div>



    </div>
    <!--a category end-->






</div>
<div class="ui gray segment">
    powered by oocomic.com
</div>

</body>
</html>