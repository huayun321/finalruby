<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properities -->
    <title><%= title %></title>

    <link rel="stylesheet" type="text/css" href="/dist/semantic.css">
    <script src="/javascripts/jquery-2.1.3.min.js"></script>
    <script src="/dist/semantic.js"></script>

    <!--moment-->
    <script src="/javascripts/moment/moment-with-locales.js"></script>
    <script src="/javascripts/moment/moment-timezone-with-data.js"></script>

</head>
<body>
<div class="ui blue inverted menu">
    <a href="/" class="item">
        <i class="home icon"></i> 首页
    </a>
    <a href="/ruby" class="item">
        <i class="mail icon"></i> 宝石袋
    </a>
    <a href="/bbs" class="active item">
        <i class="mail icon"></i> 社区
    </a>
    <div class="right menu">
        <div class="item">
            <div class="ui icon input">
                <input type="text" placeholder="搜索中...">
                <i class="search link icon"></i>
            </div>
        </div>
        <a class="item">注册</a>
        <a class="item">登录</a>
    </div>

</div>



<div style="width: 900px; margin: 30px auto">
    <div class="ui blue  piled segment">
        <h4 class="ui left floated header">
            <a href="/bbs/category/<%= category.id %>">
                <%= category.name %>
            </a>
        </h4>
        <a href="/bbs/new-post/category/<%= category.id %>" class="small ui right floated teal  header label ">
            发帖
        </a>
        <div class="ui clearing divider"></div>

        <table class="ui red   table">
            <thead>
            <tr>
                <th class="eight wide">标题</th>
                <th class="four wide">日期</th>
                <th class="two wide">作者</th>
            </tr>
            </thead>
            <tbody>
            <% posts.forEach( function(post) { %>
            <tr>
                <td><a href="/bbs/category/<%= category.id %>/post/<%=post.id%>"><%=post.title%></a></td>
                <td><%=: post.createdOn | dateFormat %></td>
                <td><%=post.userId%></td>

            </tr>
            <% }) %>

            </tbody>
        </table>

        <div class="ui pagination menu">
            <a class="icon item">
                <i class="left arrow icon"></i>
            </a>
            <a class="active item">
                1
            </a>
            <div class="disabled item">
                ...
            </div>
            <a class="item">
                10
            </a>
            <a class="item">
                11
            </a>
            <a class="item">
                12
            </a>
            <a class="icon item">
                <i class="right arrow icon"></i>
            </a>
        </div>



    </div>
    <!--a category end-->






</div>
<div class="ui gray segment">
    powered by oocomic.com
</div>

</body>
</html>